CREATE TABLE curso (
    id INTEGER primary key,
        nome VARCHAR(255) not null
);

CREATE TABLE aluno (
    id SERIAL PRIMARY KEY,
    nome VARCHAR(255) NOT NULL
);

CREATE TABLE aluno_curso (
    aluno_id INTEGER,
    curso_id INTEGER,
    PRIMARY KEY (aluno_id, curso_id),
    
    FOREIGN KEY (aluno_id)
    REFERENCES aluno (id),

    FOREIGN KEY (curso_id)
    REFERENCES curso (id)
);
